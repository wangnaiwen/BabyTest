<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <!-- config the dao -->
    <bean id="baseDAO" class="dao.BaseDAO"></bean>
	<bean id="userDAO" class="dao.UserImpl" parent="baseDAO"></bean>
	
	<!-- config the service -->
	<bean id="baseUserServiceDAO" class="service.BaseUserServiceDAO">
		<property name="userDAO" ref="userDAO"></property>
	</bean>
	<bean id="loginServiceDAO" class="service.LoginService" parent="baseUserServiceDAO"></bean>
	
	<!-- config the action -->
	<bean id="loginAction" class="action.LoginAction">
		<property name="loginServiceDAO" ref="loginServiceDAO"></property>
	</bean>
</beans>